{
  "version": 2,
  "builds": [
    {
      "src": "app/backend/api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "app/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/auth/(.*)",
      "dest": "/app/backend/api"
    },
    {
      "src": "/api/(.*)",
      "dest": "/app/backend/api"
    },
    {
      "src": "/(.*)",
      "dest": "/app/frontend/index.html"
    }
  ]
}